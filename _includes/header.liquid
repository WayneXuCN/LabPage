<header>
  <!-- Nav Bar -->
  <nav id="navbar" class="navbar navbar-light navbar-expand-sm {% if site.navbar_fixed %}fixed-top{% else %}sticky-top{% endif %}" role="navigation">
    <div class="container">
      {% if page.permalink != '/' %}
        <a class="navbar-brand title font-weight-lighter" href="{{ site.baseurl }}/">
          {% if site.title == 'blank' %}
            {% if site.first_name %}
              <span class="font-weight-bold">
                {{- site.first_name -}}
              </span>
            {% endif %}
            {% if site.middle_name %}
              {{- site.middle_name -}}
            {% endif %}
            {% if site.last_name %}
              {{- site.last_name -}}
            {% endif %}
          {% else %}
            {{- site.title -}}
          {% endif %}
        </a>
      {% elsif site.enable_navbar_social %}
        <!-- Social Icons -->
        <div class="navbar-brand social">{% social_links %}</div>
      {% endif %}
      <!-- Navbar Toggle -->
      <button
        class="navbar-toggler collapsed ml-auto"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="{{ site.data[site.active_lang].strings.header.toggle_navigation }}">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar top-bar"></span>
        <span class="icon-bar middle-bar"></span>
        <span class="icon-bar bottom-bar"></span>
      </button>

      <div class="collapse navbar-collapse text-right" id="navbarNav">
        <ul class="navbar-nav ml-auto flex-nowrap align-items-center">
          {% for page in site.pages %}
            {% if page.permalink == '/' %} {% assign about_title = page.title %} {% endif %}
          {% endfor %}

          <!-- About -->
          <li class="nav-item {% if page.permalink == '/' %}active{% endif %}">
            <a class="nav-link" href="{{ '/' | relative_url }}">
              {{- about_title }}
              {% if page.permalink == '/' %}
                <span class="sr-only">{{ site.data[site.active_lang].strings.header.current }}</span>
              {% endif %}
            </a>
          </li>

          <!-- Other pages -->
          {% assign sorted_pages = site.pages | sort: 'nav_order' %}
          {% for p in sorted_pages %}
            {% if p.nav and p.autogen == null %}
              {% if p.dropdown %}
                {% assign has_active_child = false %}
                {% for child in p.children %}
                  {% if page.title == child.title %}
                    {% assign has_active_child = true %}
                  {% endif %}
                {% endfor %}
                <li class="nav-item dropdown {% if page.title == p.title or has_active_child %}active{% endif %}">
                  <a
                    class="nav-link dropdown-toggle"
                    href="#"
                    id="navbarDropdown"
                    role="button"
                    data-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false">
                    {{- p.title }}
                    {% if page.title == p.title or has_active_child %}
                      <span class="sr-only">{{ site.data[site.active_lang].strings.header.current }}</span>
                    {% endif %}
                  </a>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    {% for child in p.children %}
                      {% if child.title == 'divider' %}
                        <div class="dropdown-divider"></div>
                      {% else %}
                        <a
                          class="dropdown-item {% if page.title == child.title %}active{% endif %}"
                          href="{% if child.permalink contains '://' %}{{ child.permalink }}{% else %}{{ child.permalink | relative_url }}{% endif %}">
                          {{- child.title -}}
                        </a>
                      {% endif %}
                    {% endfor %}
                  </div>
                </li>
              {% else %}
                {% assign parent_link = p.permalink | remove: 'index.html' %}
                <li class="nav-item {% if page.url contains parent_link %}active{% endif %}">
                  {%- if p.permalink contains '://' -%}
                    {%- assign url = p.permalink -%}
                  {%- elsif p.permalink contains '/blog/' -%}
                    {%- assign url = '/blog/' -%}
                  {%- else -%}
                    {%- assign url = p.url -%}
                  {%- endif %}
                  <a class="nav-link" href="{{ url | relative_url }}">
                    {{- p.title }}
                    {% if page.url contains p.url %}
                      <span class="sr-only">{{ site.data[site.active_lang].strings.header.current }}</span>
                    {% endif %}
                  </a>
                </li>
              {% endif %}
            {% endif %}
          {% endfor %}
          {% if site.search_enabled %}
            <!-- Search -->
            <li class="nav-item">
              <button
                id="search-toggle"
                title="{{ site.data[site.active_lang].strings.header.search }}"
                onclick="openSearchModal()">
                <!-- inline SVG so it inherits currentColor on hover -->
                <svg
                  class="icon-img"
                  xmlns="http://www.w3.org/2000/svg"
                  width="1em"
                  height="1em"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0" />
                  <path d="M21 21l-6 -6" />
                </svg>
              </button>
            </li>
          {% endif %}
          <!-- Toogle language -->
          {% if site.languages.size >= 2 %}
            {% if site.languages.size == 2 %}
              {% if site.active_lang == site.languages.first %}
                {% assign other_language = site.languages.last %}
              {% else %}
                {% assign other_language = site.languages.first %}
              {% endif %}
              <li class="lang-switcher-item">
                {% assign current_url = page.url %}
                {% if site.active_lang != site.default_lang %}
                  {% assign prefix = '/' | append: site.active_lang %}
                  {% assign current_url = page.url | remove_first: prefix %}
                {% endif %}
                {% if site.active_lang == site.default_lang %}
                  <a
                    class="lang-switcher-single"
                    {% static_href -%}
                    href="{{ site.baseurl }}/{{ other_language }}{{ current_url }}"
                    {%- endstatic_href %}>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="1em"
                      height="1em"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="lang-icon lucide lucide-globe-icon lucide-globe">
                      <circle cx="12" cy="12" r="10"/>
                      <path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/>
                      <path d="M2 12h20"/>
                    </svg>
                    {% if site.country_flag %}
                      <span class="flag-icon fi fi-{{ other_language | split: "_" | last }}"></span>
                    {% else %}
                      <span class="lang-label">{{ site.language_names[other_language] }}</span>
                    {%- endif -%}
                  </a>
                {% else %}
                  <a class="lang-switcher-single" {% static_href -%} href="{{ site.baseurl }}{{ current_url }}" {%- endstatic_href %}>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="1em"
                      height="1em"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="lang-icon lucide lucide-globe-icon lucide-globe">
                      <circle cx="12" cy="12" r="10"/>
                      <path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/>
                      <path d="M2 12h20"/>
                    </svg>
                    {% if site.country_flag %}
                      <span class="flag-icon fi fi-{{ site.default_lang | split: "_" | last }}"></span>
                    {% else %}
                      <span class="lang-label">{{ site.language_names[site.default_lang] }}</span>
                    {%- endif -%}
                  </a>
                {% endif %}
              </li>
            {% else %}
              <li class="lang-switcher-item">
                <div class="lang-switcher-dropdown">
                  <button
                    class="lang-switcher-toggle"
                    type="button"
                    aria-haspopup="true"
                    aria-expanded="false">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="1em"
                      height="1em"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="lang-icon lucide lucide-globe-icon lucide-globe">
                      <circle cx="12" cy="12" r="10"/>
                      <path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/>
                      <path d="M2 12h20"/>
                    </svg>
                  </button>
                  <div class="lang-dropdown-menu" aria-labelledby="navbarDropdown">
                    {% assign language_set = false %}
                    {% for l in site.languages %}
                      {% if language_set %}
                        <div class="lang-dropdown-divider"></div>
                      {% endif %}
                      {% assign current_url = page.url %}
                      {% if site.active_lang != site.default_lang %}
                        {% assign prefix = '/' | append: site.active_lang %}
                        {% assign current_url = page.url | remove_first: prefix %}
                      {% endif %}
                      {% comment %} Build link for each language; include the active one and mark it .active {% endcomment %}
                      {% if l == site.default_lang %}
                        <a class="lang-dropdown-item {% if l == site.active_lang %}active{% endif %}" {% static_href -%} href="{{ site.baseurl }}{{ current_url }}" {%- endstatic_href %} aria-current="{% if l == site.active_lang %}true{% else %}false{% endif %}">
                          {% if site.country_flag %}
                            <span class="flag-icon fi fi-{{ l | split: "_" | last }}"></span>
                          {% else %}
                            <span class="lang-label">{{ site.language_names[l] }}</span>
                          {%- endif -%}
                        </a>
                      {% else %}
                        <a class="lang-dropdown-item {% if l == site.active_lang %}active{% endif %}" {% static_href -%} href="{{ site.baseurl }}/{{ l }}{{ current_url }}" {%- endstatic_href %} aria-current="{% if l == site.active_lang %}true{% else %}false{% endif %}">
                          {% if site.country_flag %}
                            <span class="flag-icon fi fi-{{ l | split: "_" | last }}"></span>
                          {% else %}
                            <span class="lang-label">{{ site.language_names[l] }}</span>
                          {%- endif -%}
                        </a>
                      {% endif %}
                      {% assign language_set = true %}
                    {% endfor %}
                  </div>
                </div>
              </li>
            {% endif %}
          {% endif %}
          {% if site.enable_darkmode %}
            <!-- Toogle theme mode -->
            <li class="nav-item">
              <button id="light-toggle" title="{{ site.data[site.active_lang].strings.header.change_theme }}">
                <svg
                  id="light-toggle-dark"
                  class="icon-img"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M12 3c.132 0 .263 0 .393 0a7.5 7.5 0 0 0 7.92 12.446a9 9 0 1 1 -8.313 -12.454z" />
                </svg>
                <svg
                  id="light-toggle-light"
                  class="icon-img"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M14.828 14.828a4 4 0 1 0 -5.656 -5.656a4 4 0 0 0 5.656 5.656z" />
                  <path d="M6.343 17.657l-1.414 1.414" />
                  <path d="M6.343 6.343l-1.414 -1.414" />
                  <path d="M17.657 6.343l1.414 -1.414" />
                  <path d="M17.657 17.657l1.414 1.414" />
                  <path d="M4 12h-2" />
                  <path d="M12 4v-2" />
                  <path d="M20 12h2" />
                  <path d="M12 20v2" />
                </svg>
              </button>
            </li>
          {% endif %}
        </ul>
      </div>
    </div>
  </nav>
  {% if site.enable_progressbar %}
    <!-- Scrolling Progress Bar -->
    <progress id="progress" value="0">
      <div class="progress-container">
        <span class="progress-bar"></span>
      </div>
    </progress>
  {% endif %}
</header>
